@model EXAMEN.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Room Number
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.HotelRoom.RoomNumber)
        </dd>
        <dt class="col-sm-3">
            Check-in Date
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-3">
            Check-out Date
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class="col-sm-3">
            Number of Guests
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NumberOfGuests)
        </dd>
        <dt class="col-sm-3">
            Total Price
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="MyReservations">Back to My Reservations</a>
    </form>
</div> 