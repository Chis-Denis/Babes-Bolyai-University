@{
    ViewData["Title"] = "Reserve Room";
    var room = ViewBag.Room as EXAMEN.Models.HotelRoom;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Reserve Room @room.RoomNumber</h2>
        
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Room Details</h5>
                <p class="card-text">
                    Capacity: @room.Capacity persons<br />
                    Base Price: $@room.BasePrice per night<br />
                    Check-in: @ViewBag.CheckInDate.ToString("d")<br />
                    Check-out: @ViewBag.CheckOutDate.ToString("d")<br />
                    Total Price: $@ViewBag.TotalPrice
                </p>
            </div>
        </div>

        <form method="post">
            <input type="hidden" name="roomId" value="@room.Id" />
            <input type="hidden" name="checkInDate" value="@ViewBag.CheckInDate" />
            <input type="hidden" name="checkOutDate" value="@ViewBag.CheckOutDate" />
            
            <div class="form-group">
                <label for="numberOfGuests">Number of Guests</label>
                <input type="number" class="form-control" id="numberOfGuests" name="numberOfGuests" 
                       min="1" max="@room.Capacity" required />
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Confirm Reservation</button>
                <a asp-action="Search" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div> 