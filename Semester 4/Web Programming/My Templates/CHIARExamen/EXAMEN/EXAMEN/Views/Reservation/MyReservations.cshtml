@model IEnumerable<EXAMEN.Models.Reservation>
@{
    ViewData["Title"] = "My Reservations";
}

<h2>My Reservations</h2>

<div class="row">
    @foreach (var reservation in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Room @reservation.HotelRoom.RoomNumber</h5>
                    <p class="card-text">
                        Check-in: @reservation.CheckInDate.ToString("d")<br />
                        Check-out: @reservation.CheckOutDate.ToString("d")<br />
                        Number of Guests: @reservation.NumberOfGuests<br />
                        Total Price: $@reservation.TotalPrice
                    </p>
                    <div class="mt-2">
                        <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any reservations yet.
    </div>
}

<div class="mt-3">
    <a asp-action="Search" class="btn btn-primary">Make a New Reservation</a>
</div> 