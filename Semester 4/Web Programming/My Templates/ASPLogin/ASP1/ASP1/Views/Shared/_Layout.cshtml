<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP1</title> <!-- Sets the page title dynamically. -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Links to Bootstrap CSS for styling. -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Links to custom site CSS. -->
    <link rel="stylesheet" href="~/ASP1.styles.css" asp-append-version="true" /> <!-- Links to ASP.NET Core built-in styles. -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP1</a> <!-- Brand link to the home page. -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> <!-- Icon for the mobile navigation toggler. -->
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> <!-- Navigation link to the Home page. -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> <!-- Navigation link to the Privacy page. -->
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated) // Checks if the user is authenticated (logged in). -->
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @User.Identity.Name!</span> <!-- Displays a welcome message with the logged-in username. -->
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Logout</button> <!-- Logout button that submits a POST request to the Logout action. -->
                                </form>
                            </li>
                        }
                        else // If the user is not authenticated.
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a> <!-- Link to the login page. -->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a> <!-- Link to the registration page. -->
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Renders the content of the specific view being displayed. -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ASP1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> <!-- Copyright and privacy policy link. -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- Links to jQuery JavaScript library. -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Links to Bootstrap JavaScript bundle. -->
    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Links to custom site JavaScript. -->
    @await RenderSectionAsync("Scripts", required: false) <!-- Renders a section for page-specific scripts if defined. -->
</body>
</html>
