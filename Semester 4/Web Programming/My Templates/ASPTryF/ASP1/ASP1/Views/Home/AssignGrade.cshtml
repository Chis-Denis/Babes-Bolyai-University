@model ASP1.Models.AssignGradeViewModel

@{
    ViewData["Title"] = "Assign Grade";
}

<div class="text-center">
    <h1 class="display-4">Assign/Update Grade for @Model.StudentName in @Model.CourseName</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="AssignGrade" method="post">
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group">
            <label asp-for="StudentName"></label>
            <input asp-for="StudentName" class="form-control" required />
            <span asp-validation-for="StudentName" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Grade"></label>
            <input asp-for="Grade" class="form-control" required />
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
        <div class="text-danger">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>

        <button type="submit" class="btn btn-primary mt-3">Save Grade</button>
    </form>

    <p class="mt-4"><a asp-action="ViewCourseParticipants" asp-route-courseId="@Model.CourseId">Back to Participants</a></p>
    <p><a asp-action="ProfessorDashboard">Back to Dashboard</a></p>
</div> 