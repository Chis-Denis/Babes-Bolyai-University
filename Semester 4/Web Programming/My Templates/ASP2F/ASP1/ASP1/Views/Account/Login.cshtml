@model ASP1.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in"; // Sets the title of the page.
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post"> // Form for submitting login credentials.
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> <!-- Displays validation errors for the entire model. -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" /> <!-- Input field for email. -->
                <label asp-for="Email" class="form-label">Email</label> <!-- Label for the email input. -->
                <span asp-validation-for="Email" class="text-danger"></span> <!-- Displays validation errors for the email field. -->
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" /> <!-- Input field for password. -->
                <label asp-for="Password" class="form-label">Password</label> <!-- Label for the password input. -->
                <span asp-validation-for="Password" class="text-danger"></span> <!-- Displays validation errors for the password field. -->
            </div>
            <div class="checkbox mb-3">
                <label asp-for="RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="RememberMe" /> <!-- Checkbox for 'Remember me' functionality. -->
                    @Html.DisplayNameFor(m => m.RememberMe) <!-- Displays the display name for the RememberMe property. -->
                </label>
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button> <!-- Submit button for login. -->
            </div>
            <div class="mt-3">
                <p>
                    Don't have an account? <a asp-action="Register">Register here</a> <!-- Link to the registration page. -->
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} <!-- Renders partial view for client-side validation scripts. -->
} 